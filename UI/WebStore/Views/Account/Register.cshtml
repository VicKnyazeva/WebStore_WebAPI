@model WebStore.ViewModels.Identity.RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
}
<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Регистрация нового пользователя</h2>
                    <form asp-action="Register" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="UserName" type="text" placeholder="Логин" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                        <input asp-for="Password" type="password" placeholder="Пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <input asp-for="PasswordConfirmation" type="password" placeholder="Подтверждение пароля" />
                        <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>

                        <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
